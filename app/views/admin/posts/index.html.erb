
<div class="container pt-5">
  <div class="row">
    <div class="col-sm-7 mx-auto">
      <h2>投稿一覧</h2>

      <% unless @posts.blank? %>
       <table class='table mt-3'>
         <thead>
           <th></th>
           <th>タイトル</th>
           <th></th>
         </thead>
         <tbody>
           <% @posts.each do |post| %>
           <% if post.status == "disclosure" %>
           <tr>
             <td>
                 <%= link_to admin_post_path(post) do %>
                 <%= image_tag post.get_image, size:'50x50' %><% end %>
             </td>
             <td><%= link_to post.title, admin_post_path(post) %></td>
             <td><%#= link_to "削除する", post, url: admin_posts_path, method: :delete, data: { confirm: '本当にかまいませんか？' }, class: "btn btn-danger ml2" %></td>
           <% end %></tr>
           <% end %>
         </tbody>
       </table>
       <% else %>
        <p>投稿はありません</p>
       <% end %>

      <div class= "d-flex justify-content-center">

      </div>
    </div>
  </div>
</div>