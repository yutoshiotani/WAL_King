<div class="container pt-5">
   <div class="row">
	   
	     <div class="content col-md-7">
		     <h2 class="section-ttl"><%= @post.title %></h2>
		       <div class="flex text-center">
		         <% if @post.image.attached? %>
		   	     <%= image_tag @post.image, size: "400x300" %>
		   	     <% else %>
		   	     <%= image_tag 'no_image', size: "400x300" %>
             <% end %>
		       </div></br>
		       <div class="post_info text-right">
		   	     作成者　<%= @post.user.name %></br>
		   	     <%= @post.count %>歩</br>
		       </div>
		       <div class="pt-3 pl-5">
		   	      <%= @post.body %>
		       </div></br>
		       <div class="text-right pt-4">
		   	   <div class="text-info">タグ　　　</div>
		       <% @post.tags.each do |tag| %>
             <%= tag.name %>
           <% end %></div>
		       <div class="text-right">
		       	
		           <%#= link_to "削除する", @post, url: admin_posts_path ,method: :delete, data: { confirm: '本当にかまいませんか？' }, class: "btn btn-danger ml2" %>
		   	      
		      	
		       

	   
</div>
</div>