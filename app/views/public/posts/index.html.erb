<div class="container pt-5">
  <div class="row">
    <div class="col-12 mx-auto">
      <h2>商品一覧</h2>
      <div class="text-right">
      <%= link_to "新規投稿", new_post_path %>

      </div>
      <% unless @posts.blank? %>
       <table class='table mt-3'>
         <thead>
           <th>投稿ID</th>
           <th>タイトル</th>
           <th>税抜価格</th>
           <th>ジャンル</th>
           <th>ステータス</th>
         </thead>
         <tbody>
           <% @posts.each do |f| %>
           <tr>
             <td><%= f.id %></td>
             <td><%= link_to f.name, post_path(f) %></td>
             <td><%#= post.price.to_s(:delimited) %></td>
             <td><%#= post.genre.name %></td>
             <td>
               <%# if item.sale_status == true %>
                <p class="text-success">販売中</p>
               <%# elsif item.sale_status == false %>
                <p class="text-muted">販売停止中</p>
               <%# end %>
             </td>
           </tr>
           <% end %>
         </tbody>
       </table>
       <% else %>
        <p>投稿はありません</p>
       <% end %>

      <div class= "d-flex justify-content-center">
        <%#= paginate @items %>
      </div>
    </div>
  </div>
</div>