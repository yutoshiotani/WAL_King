<div class="container pt-5">

  <% if flash[:notice] %>
    <p class="text-active"><%= flash[:notice] %></p>
  <% end %>

		<%#= link_to "パスワードを変更する", edit_customer_registration_path, class: "btn btn-success ml2" %>
   <div class="row">
	</h3>
	   <%= render "public/tags/tag_search" %>
	   <div class="content col-md-7">
		   <h2 class="section-ttl"><%= @post.title %></h2>
		   <div class="flex text-center">
		    <% if @post.image.attached? %>
		   	 <%= image_tag @post.image, size: "400x300" %>
		   	 <% else %>
		   	 <%= image_tag 'no_image', size: "400x300" %>
         <% end %>
		   </div></br>
		   <div class="post_info text-right">
		   	作成者　<%= @post.user.name %></br>
		   	<%= @post.count %>歩</br>
		   </div>
		   <div class="pt-3 pl-5">
		   	 <%= @post.body %>
		   </div></br>
		   <div class="text-right pt-4">
		   	<div class="text-info">タグ　　　</div>
		   <% @post.tags.each do |tag| %>
         <%= tag.name %>
        <% end %></div>

		   <div class="text-right">
		   	<% if @post.user == current_user %>
		   	<%= link_to "削除する", @post, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-danger ml2" %>
		   	<%= link_to "編集する", edit_post_path(@post.id), class: "btn btn-success ml2" %>
		   	<% end %>
		   </div>
		   <% if user_signed_in? %>
    <div class=<%= "like-" + @post.id.to_s %> >
            <%= render "public/likes/btn", post: @post %>
          </div>

	 <div class="post-comments-counter pt-3">
            <%= render "public/comments/counter", post: @post %>
          </div>
	 <div class="post-comments-index pt-2">
        <%= render "public/comments/index", post: @post %>
      </div>

      <%= render "public/comments/form", post: @post, comment: @comment %>
<% end %>
</div>
<%= render "public/users/side" %>
</div>