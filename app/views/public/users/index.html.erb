<div class="container">
  <div class="row mb-4">
    <div class="col-12">
      <h3 class="offset-1 my-5 text title-text">会員一覧</h3>
      <div class="row">
        <div class="col-12 mx-auto">
          <table class="table table-hover">
            <thead>
              <tr class="table-active text">
                <th>会員ID</th>
                <th>氏名</th>
                <th>ステータス</th>
                <th>投稿数</th>
              </tr>
            </thead>

              <tbody>
                <% @users.each do |user| %>
                  <tr class="light-text">
                    <td><%= user.id %></th>
                    <td class="text">
                      <%= link_to user_path(user), class: "text-dark" do %>
                        <%= user.name %>
                      <% end %>
                    </td>
                    <td>
                      <%= user.job.name %>
                    </td>
                    <td>
                      <%# if customer.is_deleted %>
                    <!--span>退会</span-->
                      <%# else %>
                        <!--span class="text-success text">有効</span-->
                      <%# end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
           </table>
        </div>
      </div>
    </div>
  </div>
</div>