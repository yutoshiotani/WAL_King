<div class="container pt-5">
  <div class="row">
    <div class="col-6 mx-auto">
      <h3 class="bg-light">ユーザー情報編集画面</h3></br>
      <% if @user.name != "guestuser" %>
      <%= form_with model: @user, url: public_user_path(@user), method: :patch, local:true do |f| %>
      <%= render 'layouts/errors', model: f.object %>
       <div class="form-group", style="display:inline-flex">
         <%= f.label "プロフィール", class:"col-3" %>
         <%= f.file_field :profile_image, accept: "image/*" %>
       </div>
       <div class="form-group">
         <%= f.label "名前", class:"col-sm-3" %>
         <%= f.text_field :name %>
       </div>
       <div class="form-group">
         <%= f.label "自己紹介", class:"col-sm-3" %>
         <%= f.text_area :body , class:"col-sm-6"%>
       </div>
       <div>
         <%= f.label "年齢", class:"col-sm-3" %>
         <%= f.text_field :age %>
       </div>
       <div>
         <%= f.label "性別", class:"col-sm-3" %>
         <%= f.text_field :gender %>
       </div>
       <div>
         <%= f.label "身長", class:"col-sm-3" %>
         <%= f.text_field :height %>
       </div>

       <div>
         <%= f.label "体重", class:"col-sm-3" %>
         <%= f.text_field :weight %>
       </div>
       <div>
         <%= f.label "悩み", class:"col-sm-3" %>
         <%= f.text_area :problem %>
       </div>
       <div class="form-group">
         <%= f.label "ステータス", class:"col-sm-3" %>
         <%= f.collection_select(:job_id, @jobs, :id, :name, prompt: "-- 選択してください --") %>
       </div>
        <div>
         
       </div>
       <div class="form-group">
         <%#= f.label "税抜き価格", class:"col-sm-3" %>
         <%#= f.text_field :price, :placeholder => "1000" %>
       </div>
       <div class="form-group">
         <%#= f.label "販売ステータス", class:"col-sm-4" %>
         <label><%#= f.radio_button :sale_status, "true", checked: true %></label>
         <label style="margin-left: 30px;"><%#= f.radio_button :sale_status, "false", checked: false %></label>
       </div>

       <div class="text-center">

         <%= f.submit :変更を保存, class:'btn btn-lg btn-success' %>
       </div>
      <% end %>
      <% else %>
      ゲストでログイン中は編集できません
      <% end %>
    </div>
  </div>
</div>