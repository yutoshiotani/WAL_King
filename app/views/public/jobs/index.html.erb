<div class="container pt-5">
  <div class="row">
    <div class="col-md-5">
      <h2>ステータス一覧</h2>

       <table class='table mt-3'>
         <thead>
           <th>ステータスID</th>
           <th>ステータス名</th>
         </thead>
         <tbody>
           <% @jobs.each do |job| %>
           <tr>
             <td><%= job.id %></td>
             <td><%= job.name %></td>
           </tr>
           <% end %>
         </tbody>
       </table>
      </div>
      <div class="col-md-5">ステータスを追加
         <%= form_with model: @job, class: "d-flex align-items-center" do |f| %>
         <%= render 'layouts/errors', model: f.object %></br>
          <div class="ml-3"><%= f.label :name, "ステータス名", class: "small" %></div>
          <div class="ml-3"><%= f.text_field :name, placeholder: "ステータス名" %></div>
          <div class="ml-2"><%= f.submit "新規登録", class: "form-control btn btn-success ml-5" %></div>
         <% end %>
       </div>
    </div>
</div>