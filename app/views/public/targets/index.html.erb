<div class="container pt-5">
    <div class="row">
        <%= render "public/tags/tag_search" %>
        <div class="col-md-6 ml-3 mr-3">
            目標一覧
            <table class="table">
                
                <thead>
                    <th>期限</th>
                    <th>目標体重</th>
                    <th>目標歩数</th>
                    <th>達成度</th>
                    <th></th>
                    <th></th>
                </thead>
                <tbody>
                    <% current_user.targets.each do |target| %>
                    <tr>
                    <td><%= target.limit %></td>
                    <td><%= target.weight %></td>
                    <td><%= target.daily_step %></td>
                    <td><%= target.status_i18n %></td>
                    <td><%= link_to '編集', edit_target_path(target), class: "btn btn-sm btn-success" %></td>
                    <td><%= link_to '破棄', target, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger" %></td>
                    </tr>
                    <% end %>
                </tbody>
                
            </table>
        </div>
        <%= render "public/users/side" %>
    </div>
</div>